<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
   <nav>
        <a href="/">Home</a>
        <a href="/flights">All Flights</a>
   </nav>
   <h1><%= title %> </h1>
   <br>
   <section id="show-page">
    <div><strong>Flight Number:</strong></div>
    <div><%= flight.flightNo %></div>
      <br>
    <div><strong>Departure Airport:</strong></div>
    <div><%= flight.airport %></div>
      <br>
    <div><strong>Departure Airline:</strong></div>
    <div><%= flight.airline %></div>
      <br>
    <div><strong>Departure Date/Time: </strong></div>
    <div><%= flight.departs %></div>
      <br>
    <% flight.destination.forEach(function (d) { %>
    <div><strong>Destination: </strong></div>
    <div><%= d.airport %> </div>
      <br>
    <div><strong>Arrival Date/Time:</strong></div>
    <div><%= d.arrival %> </div>
      <br>
    <% }); %> 
  </section>
  <h2>Tickets</h2>
  <table>
      <thead>
        <tr>
          <th>Seat:</th>
          <th>Price:</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td> A12 </td>
          <td> 150 </td>
        </tr>
      </tbody>
    </table>
  <br>
  <h2>Add Arrival Destinations</h2>
  <form id="add-destination-form" method="POST" action="/flights/<%= flight._id %>/destinations">
    <label>Arrives:</label>
      <input type="datetime-local" name="arrival">
      <br><br>
    <label>Destination: </label>
    <select name="airport">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
      <br><br>
    <input type="submit" value="Add Destination">
  </form>
  <h2>Add Tickets</h2>
  <form id="add-tickets-form" method="POST" action="/flights/<%= flight._id %>/destinations">
    <label>Seat:</label>
      <input name="seat" required pattern="[A-F][1-9]\d?">
      <br><br>
    <label>Price:</label>
      <input name="price" type="number">
      <br><br>
      <input type="submit" value="Add Ticket">
  </form>
</body>
</html>